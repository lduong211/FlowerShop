@model FlowerShop.Models.HOA
@{
    ViewBag.Title = "Suasp";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Suasp</h2>

@using (Html.BeginForm("Suasp", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
